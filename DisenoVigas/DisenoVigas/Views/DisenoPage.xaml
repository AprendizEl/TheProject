                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="Mu:" FontSize="12" />
                                <TextBox Text="{Binding disenoflexion.Mu}" Width="20" Height="10" FontSize="12" Margin="4,0,0,0"/>
